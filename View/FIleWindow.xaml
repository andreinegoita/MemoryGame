<UserControl x:Class="MemoryGame.View.FIleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.View"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="950">
    <Grid>
        <Image Source="/Assets/MemoryGamePlayMenu.png" Stretch="Fill" />

        <Button Content="Category" Command="{Binding  CategoryCommand}" Height="40" Width="150" Margin="325,57,325,353"/>
            <Button Content="New Game" Height="40"  Width="150" Margin="325,116,325,294"/>
            <Button Content="Open Game" Height="40"  Width="150" Margin="325,172,325,238"/>
        <Button Content="Save Game" Height="40"  Width="150" Margin="325,230,325,180"/>
        <Button Content="Statistics" Height="40"  Width="150" Margin="325,289,325,121"/>
        <Button Content="Exit" Command="{Binding ExitCommand}" Height="40"  Width="150" Margin="325,349,325,61"/>
    </Grid>
</UserControl>
