<UserControl x:Class="MemoryGame.View.OptionsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/MemoryGamePlayMenu.png"/>
        </Grid.Background>

        <Button Content="Standard" Height="40" Width="150" Margin="325,144,325,266"/>
        <Button Content="Custom" Height="40" Width="150" Margin="325,225,325,185"/>
        <Button Content="Exit" Command="{Binding ExitCommand}" Height="40" Width="150" Margin="325,317,325,93"/>
    </Grid>
</UserControl>
