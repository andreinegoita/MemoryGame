<Window x:Class="MemoryGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MemoryGame.ViewModel"  
        Title="Memory Game" Height="650" Width="900"
        Icon="/Assets/MemoryGameIcon.jpg">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>


    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding OpenSettingsCommand}" />
    </Window.InputBindings>
    
    <Grid>
        <ContentControl Content="{Binding CurrentView}"/>
        <Button Content="Settings" Command="{Binding OpenSettingsCommand}" Width="100" Height="40" Margin="-301,79,1101,515"/>

    </Grid>
</Window>
