<UserControl x:Class="MemoryGame.View.FIleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Assets/MemoryGamePlayMenu.png" Stretch="Fill" />

        <UniformGrid Columns="1" Rows="3"  HorizontalAlignment="Center" Width="200" Height="150" Margin="0,86,0,214">
            <Button Content="Category" Height="40"/>
            <Button Content="New Game" Height="40"/>
            <Button Content="Open Game" Height="40"/>
            <Button Content="Save Game" Height="40"/>
            <Button Content="Statistics" Height="40"/>
            <Button Content="Exit" Height="40"/>
        </UniformGrid>
    </Grid>
</UserControl>
