<UserControl x:Class="MemoryGame.View.PlayMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryGame.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/Assets/MemoryGamePlayMenu.png" Stretch="Fill" />

        <UniformGrid Columns="1" Rows="3" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="150">
            <Button Content="File" Command="{Binding FileCommand}" Height="40"/>
            <Button Content="Options" Command="{Binding OptionsCommand}" Height="40"/>
            <Button Content="Help" Command="{Binding HelpCommand}" Height="40"/>
            <Button Content="Exit" Command="{Binding ExitCommand}" Height="40"/>
        </UniformGrid>
    </Grid>
</UserControl>
